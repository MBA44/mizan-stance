---
layout: base.njk
---

<header class="site-header">
  <div class="kicker">{{ metadata.title or "Mizan" }}</div>
  <h1 class="site-title">{{ title or metadata.title or "Mizan" }}</h1>

  {% if description or metadata.description %}
    <p class="site-description">{{ description or metadata.description }}</p>
  {% endif %}

  <nav class="site-nav" aria-label="Navigation">
    <a href="/">Accueil</a>
    <a href="/blog/">Textes</a>
    <a href="/about/">À propos</a>
    <span class="sep">·</span>
    <a href="/fr/">FR</a>
    <a href="/en/">EN</a>
  </nav>
</header>

<section class="home-body">
  {{ content | safe }}
</section>

<footer class="site-footer">
  <p>© {{ metadata.author.name or "Mizan" }} — <a href="/feed/feed.xml">Flux</a></p>
</footer>

<style>
  .site-header { padding: 2.5rem 0 1.25rem; border-bottom: 1px solid var(--color-gray-20); }
  .kicker { letter-spacing: .14em; text-transform: uppercase; font-size: .75rem; opacity: .75; }
  .site-title { margin: .35rem 0 .5rem; font-size: 1.9rem; line-height: 1.2; }
  .site-description { margin: 0 0 1rem; opacity: .85; }
  .site-nav { display: flex; gap: .9rem; flex-wrap: wrap; align-items: center; font-size: .95rem; }
  .site-nav .sep { opacity: .5; }
  .home-body { padding: 1.75rem 0 2.5rem; }
  .site-footer { border-top: 1px solid var(--color-gray-20); padding: 1.25rem 0 2rem; opacity: .85; font-size: .95rem; }
</style>
