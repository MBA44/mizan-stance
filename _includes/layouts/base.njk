<!doctype html>
<html lang="{{ lang or metadata.language or 'fr' }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{{ title or metadata.title }}</title>
  <meta name="description" content="{{ description or metadata.description }}">

  {# ==============================
     CANONICAL
     ============================== #}
  <link rel="canonical" href="https://mizan-stance.org{{ page.url }}">

  {# ==============================
     FEED
     ============================== #}
  <link rel="alternate"
        type="application/atom+xml"
        href="/feed/feed.xml"
        title="{{ metadata.title }}">

  {# ==============================
     HREFLANG — SOURCE DE VÉRITÉ
     ============================== #}

  <!-- DEBUG-HREFLANG-BASE-NJK -->
  {% set site = "https://mizan-stance.org" %}

  {# langue courante #}
  <link rel="alternate"
        hreflang="{{ lang }}"
        href="{{ site }}{{ page.url }}">

  {# langue sœur si déclarée #}
  {% if translation %}
    <link rel="alternate"
          hreflang="{{ 'en' if lang == 'fr' else 'fr' }}"
          href="{{ site }}{{ translation }}">
  {% endif %}

  {# x-default uniquement pour la home #}
  {% if page.url == "/" %}
    <link rel="alternate"
          hreflang="x-default"
          href="{{ site }}/">
  {% endif %}

  {# ==============================
     STYLES
     ============================== #}
  <style>{% include "css/index.css" %}</style>
  <style>{% getBundle "css" %}</style>

  {# ==============================
     SCRIPTS
     ============================== #}
  <script type="module">
    {% include "node_modules/@zachleat/heading-anchors/heading-anchors.js" %}
  </script>
</head>

<body>
  <a href="#main" id="skip-link" class="visually-hidden">
    Skip to main content
  </a>

  <header>
    <div class="topbar">
      <a href="/" class="home-link">
        {{ metadata.title }}
      </a>

      {# ==============================
         LANGUAGE SWITCH (UI)
         ============================== #}
      <nav aria-label="Language switch" class="lang-switch">
        {% if lang == "fr" %}
          <strong>FR</strong> ·
          {% if translation %}
            <a href="{{ translation }}" hreflang="en" lang="en">EN</a>
          {% endif %}
        {% else %}
          {% if translation %}
            <a href="{{ translation }}" hreflang="fr" lang="fr">FR</a>
          {% endif %}
          · <strong>EN</strong>
        {% endif %}
      </nav>
    </div>

    <nav>
      <h2 class="visually-hidden">Top level navigation menu</h2>
      <ul class="nav">
        {%- for entry in collections.all | eleventyNavigation %}
          <li class="nav-item">
            <a href="{{ entry.url }}"
               {% if entry.url == page.url %}aria-current="page"{% endif %}>
              {{ entry.title }}
            </a>
          </li>
        {%- endfor %}
      </ul>
    </nav>
  </header>

  <main id="main">
    <heading-anchors>
      {{ content | safe }}
    </heading-anchors>
  </main>

  <footer>
    <p>
      <em>
        Built with <a href="https://www.11ty.dev/">
          {{ eleventy.generator }}
        </a>
      </em>
    </p>
  </footer>

  <!-- This page {{ page.url }} was built on {% currentBuildDate %} -->
  <script type="module" src="{% getBundleFileUrl "js" %}"></script>
</body>
</html>