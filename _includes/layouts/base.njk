{# ============================
   CANONICAL + HREFLANG (FR / EN)
   Source of truth:
   - page.url
   - lang (front matter)
   - translation (front matter, optional)
   ============================ #}

{% set site = "https://mizan-stance.org" %}
{% set p = page.url %}
{% set currentLang = lang or metadata.language or "fr" %}
{% set otherLang = "en" if currentLang == "fr" else "fr" %}
{% set otherUrl = translation %}

<link rel="canonical" href="{{ site }}{{ p }}" />

<!-- DEBUG-HREFLANG-BASE-NJK
lang={{ currentLang }}
page.url={{ p }}
translation={{ otherUrl or "∅" }}
-->

{% if p == "/" %}
  <link rel="alternate" hreflang="fr" href="{{ site }}/fr/" />
  <link rel="alternate" hreflang="en" href="{{ site }}/en/" />
  <link rel="alternate" hreflang="x-default" href="{{ site }}/" />
{% else %}
  {% if otherUrl %}
    <link rel="alternate" hreflang="{{ currentLang }}" href="{{ site }}{{ p }}" />
    <link rel="alternate" hreflang="{{ otherLang }}" href="{{ site }}{{ otherUrl }}" />
    <link rel="alternate" hreflang="x-default" href="{{ site }}{{ p }}" />
  {% else %}
    <link rel="alternate" hreflang="{{ currentLang }}" href="{{ site }}{{ p }}" />
    <link rel="alternate" hreflang="x-default" href="{{ site }}{{ p }}" />
  {% endif %}
{% endif %}			{# Toujours self #}
			<link rel="alternate" hreflang="{{ currentLang }}" href="{{ SITE }}{{ p }}" />

			{# Mirror UNIQUEMENT si fourni par front-matter `translation` #}
			{% if otherUrl %}
				<link rel="alternate" hreflang="{{ otherLang }}" href="{{ SITE }}{{ otherUrl }}" />
			{% endif %}

		{% endif %}
		<!-- DEBUG-HREFLANG:END -->

		{#- Uncomment this if you’d like folks to know that you used Eleventy to build your site!  #}
		{#- <meta name="generator" content="{{ eleventy.generator }}"> #}

		{#- Add the contents of a file to the bundle #}
		<style>{% include "css/index.css" %}</style>

		{#- Render the CSS bundle using inlined CSS (for the fastest site performance in production) #}
		<style>{% getBundle "css" %}</style>

		{#- Add the heading-anchors web component to the JavaScript bundle #}
		<script type="module">{% include "node_modules/@zachleat/heading-anchors/heading-anchors.js" %}</script>
	</head>

	<body>
		<a href="#main" id="skip-link" class="visually-hidden">Skip to main content</a>

		<header>
			<div class="topbar">
				<a href="/" class="home-link">{{ metadata.title }}</a>

				{# --- Language switch uses `translation` if present --- #}
				<nav aria-label="Language switch" class="lang-switch">
					{% if currentLang == "fr" %}
						<strong>FR</strong>
						<span> · </span>
						{% if otherUrl %}
							<a href="{{ otherUrl }}" hreflang="en" lang="en">EN</a>
						{% else %}
							<span style="opacity:.6">EN</span>
						{% endif %}
					{% else %}
						{% if otherUrl %}
							<a href="{{ otherUrl }}" hreflang="fr" lang="fr">FR</a>
						{% else %}
							<span style="opacity:.6">FR</span>
						{% endif %}
						<span> · </span>
						<strong>EN</strong>
					{% endif %}
				</nav>
			</div>

			{#- Top navigation driven by eleventy-navigation #}
			<nav>
				<h2 class="visually-hidden">Top level navigation menu</h2>
				<ul class="nav">
				{%- for entry in collections.all | eleventyNavigation %}
					<li class="nav-item">
						<a href="{{ entry.url }}"{% if entry.url == page.url %} aria-current="page"{% endif %}>
							{{ entry.title }}
						</a>
					</li>
				{%- endfor %}
				</ul>
			</nav>
		</header>

		<main id="main">
			<heading-anchors>
				{{ content | safe }}
			</heading-anchors>
		</main>

		<footer>
			<p>
				<em>Built with <a href="https://www.11ty.dev/">{{ eleventy.generator }}</a></em>
			</p>
		</footer>

		<!-- This page `{{ page.url }}` was built on {% currentBuildDate %} -->
		<script type="module" src="{% getBundleFileUrl "js" %}"></script>
	</body>
</html>
