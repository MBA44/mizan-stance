{# Simple language switcher based on URL prefix #}
{% set p = page.url or "/" %}
{% set isEn = p.startsWith("/en/") %}

<nav class="lang-switch" aria-label="Language switch">
  {% if isEn %}
    <a href="/" hreflang="fr" lang="fr">FR</a>
    <span> · </span>
    <strong>EN</strong>
  {% else %}
    <strong>FR</strong>
    <span> · </span>
    <a href="/en/" hreflang="en" lang="en">EN</a>
  {% endif %}
</nav>
